#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

mkdir -p $BUILD_DIR/.binstubs/bin

touch $BUILD_DIR/.binstubs/bin/node
chmod 755 $BUILD_DIR/.binstubs/bin/node

touch $BUILD_DIR/.binstubs/bin/yarn
chmod 755 $BUILD_DIR/.binstubs/bin/yarn

export PATH="$BUILD_DIR/.binstubs/bin:$PATH"

mkdir -p "$BUILD_DIR/.profile.d"
echo 'export PATH="$HOME/.binstubs/bin:$PATH"' > "$BUILD_DIR/.profile.d/node-binstubs.sh"
chmod 755 "$BUILD_DIR/.profile.d/node-binstubs.sh"
